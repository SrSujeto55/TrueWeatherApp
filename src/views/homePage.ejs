<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="../../public/css/home.css">
        <title>WeatherApp</title>
    </head>
    <body>
        <h1 id="errMsj"></h1>
        <form id="form">
            <input type="text" id="apiKey" name="key" placeholder="apikey"><br>
            <button type="submit">Submit</button>
        </form>

        <script type="text/javascript">
            const formLogin = document.querySelector('#form');
            formLogin.addEventListener('submit', e => {
                e.preventDefault();
                const formData = new FormData(formLogin);

                fetch('/setkey', {
                    method: 'POST',
                    body: formData
                })

                // .then(response => response.json())
                // .then(data => console.log(data));
                .then(response => {
                    if (!response.ok){
                        const errMsj = document.querySelector('#errMsj');
                        errMsj.textContent = 'Llave api invalida, intente de nuevo';
                    }else{
                        window.location.replace('http://localhost:3000/consult');
                    }
                })
            })
            

        </script>
        
    </body>
</html>